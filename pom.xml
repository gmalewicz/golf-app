	<artifactId>golf-app</artifactId>
	<version>3.3.9</version>
	<name>golf</name>
	<description>DGNG - webscoket RECEIPT support</description>

	<properties>
		<java.version>17</java.version>
		<guava.version>31.1-jre</guava.version>
		<springdoc.version>1.6.14</springdoc.version>
		<jsonwebtoken.version>0.9.1</jsonwebtoken.version>
		<hibernate-types-60.version>2.21.1</hibernate-types-60.version>
		<modelmapper.version>3.1.1</modelmapper.version>
		<liquibase-maven-plugin.version>4.17.0</liquibase-maven-plugin.version>
		<org.testcontainers.postgresql.version>1.17.6</org.testcontainers.postgresql.version>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<maven.compiler.source>17</maven.compiler.source>
		<maven.compiler.target>17</maven.compiler.target>
